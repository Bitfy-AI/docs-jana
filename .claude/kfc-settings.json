{
  "$schema": "./kfc-settings-schema.json",
  "version": "1.0.0",
  "project": {
    "name": "docs-jana",
    "type": "node-cli",
    "framework": "node.js",
    "packageManager": "pnpm",
    "language": "pt-BR"
  },
  "workflow": {
    "specBasePath": ".claude/specs",
    "systemPromptsPath": ".claude/system-prompts",
    "agentsPath": ".claude/agents/kfc",
    "templatesPath": ".claude/templates",
    "projectStandardsPath": ".claude/project"
  },
  "specs": {
    "defaultParallelAgents": 1,
    "maxParallelAgents": 128,
    "autoApprovalEnabled": false,
    "requireExplicitApproval": true,
    "phases": {
      "requirements": {
        "enabled": true,
        "template": "requirements-template.md",
        "outputFile": "requirements.md"
      },
      "design": {
        "enabled": true,
        "template": "design-template.md",
        "outputFile": "design.md"
      },
      "tasks": {
        "enabled": true,
        "template": "tasks-template.md",
        "outputFile": "tasks.md"
      }
    }
  },
  "quality": {
    "codeReview": {
      "enabled": true,
      "agent": "code-review",
      "requireApproval": true
    },
    "compliance": {
      "enabled": true,
      "agent": "spec-compliance",
      "requireApproval": true
    },
    "testing": {
      "enabled": true,
      "agent": "spec-test",
      "requireCoverage": true,
      "minCoverage": 80
    }
  },
  "implementation": {
    "defaultMode": "sequential",
    "allowParallelExecution": true,
    "autoMode": {
      "enabled": true,
      "analyzeDependencies": true
    }
  },
  "standards": {
    "codingStandards": ".claude/project/coding-standards.md",
    "testingStandards": ".claude/project/testing-standards.md",
    "documentationStandards": ".claude/project/documentation-standards.md",
    "architecturePatterns": ".claude/project/architecture-patterns.md"
  },
  "integrations": {
    "git": {
      "enabled": true,
      "conventionalCommits": true,
      "branchNaming": "feature/{feature-name}"
    },
    "cicd": {
      "enabled": false,
      "provider": "github-actions"
    }
  },
  "features": {
    "treeBasedJudging": {
      "enabled": true,
      "maxDocsPerJudge": 4,
      "minDocsForParallel": 2
    },
    "autoRenaming": {
      "enabled": true,
      "preserveVersionHistory": true
    }
  }
}
