{
  "name": "docs-jana",
  "version": "2.2.0",
  "description": "Unified CLI for documentation and workflow management (N8N + Outline)",
  "main": "index.js",
  "bin": {
    "docs-jana": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "n8n:download": "node cli.js n8n:download",
    "n8n:upload": "node cli.js n8n:upload",
    "outline:download": "node cli.js outline:download",
    "n8n:configure": "node scripts/admin/n8n-transfer/cli/interactive-cli.js configure",
    "n8n:transfer": "node scripts/admin/n8n-transfer/cli/interactive-cli.js transfer",
    "n8n:validate": "node scripts/admin/n8n-transfer/cli/interactive-cli.js validate",
    "n8n:list-plugins": "node scripts/admin/n8n-transfer/cli/interactive-cli.js list-plugins",
    "n8n:help": "node scripts/admin/n8n-transfer/cli/interactive-cli.js help",
    "n8n": "node scripts/admin/n8n-transfer/cli/interactive-cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "jest __tests__/e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:menu:unit": "jest __tests__/unit/ui/menu --verbose",
    "test:menu:integration": "jest __tests__/integration/ui/menu --verbose",
    "test:menu:e2e": "jest __tests__/e2e/menu-e2e.test.js --verbose",
    "test:menu:performance": "jest __tests__/performance/menu-performance.test.js --verbose",
    "test:menu:accessibility": "jest __tests__/accessibility/menu-accessibility.test.js --verbose",
    "test:menu:coverage": "jest __tests__/unit/ui/menu __tests__/integration/ui/menu --coverage --coverageDirectory=coverage/menu",
    "test:menu:all": "node scripts/test/run-all-menu-tests.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [
    "documentation",
    "n8n",
    "outline",
    "backup",
    "migration",
    "workflow"
  ],
  "author": "Jana Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "dotenv": "^16.6.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.4",
    "nodemon": "^3.1.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jana-team/docs-jana.git"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
